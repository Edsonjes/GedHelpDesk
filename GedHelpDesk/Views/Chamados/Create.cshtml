@model GedHelpDesk.Models.Chamados
@{
    ViewData["Title"] = "Adicionar chamados";
}

<h1>@ViewData["Title"]</h1>
 </hr>
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Ramal" class="control-label"></label>
                <input asp-for="Ramal" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Setor" class="control-label"></label>
                <input asp-for="Setor" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Grava" class="btn btn-default" />
                <input type="hidden" asp-for="Data" />
            </div>

        </form>

    </div>

</div>
